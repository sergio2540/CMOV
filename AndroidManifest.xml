<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.game.achmed"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:glEsVersion="0x00010000" />

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <!-- Garante permissoes para Wifi-Direct -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="my.game.achmed.Activities.AchmedBomberActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="my.game.achmed.Activities.ABMainMenu" >
        </activity>
        <activity android:name="my.game.achmed.Activities.ABGame" >
        </activity>
        <activity android:name="my.game.achmed.Activities.ABGameDialog" >
        </activity>
        <activity android:name="my.game.achmed.Activities.ABLevelMenu" >
        </activity>

        <service android:name="my.game.achmed.ABMusic" >
        </service>

        <activity android:name="my.game.achmed.Activities.ABSingleRank" >
        </activity>
        <activity android:name="my.game.achmed.Activities.ABCreateSinglePlayer" >
        </activity>
        <activity
            android:name="my.game.achmed.ABMultiplayer" >
        </activity>
    </application>

</manifest>